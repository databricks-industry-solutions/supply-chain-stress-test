# Databricks Supply Chain Stress Testing Bot Configuration
# Copy this file to .env and fill in your values

# Databricks Configuration
DATABRICKS_HOST=your-domain.cloud.databricks.com
LOCAL_API_TOKEN=your_personal_access_token_here
MLFLOW_EXPERIMENT_ID=your-mlflow-experiment-id

# Supply Chain Bot Configuration
SERVING_ENDPOINT_NAME=ka-123-endpoint

# Database Configuration (PostgreSQL)
DB_USERNAME=your-username@databricks.com
DB_INSTANCE_NAME=your-instance-name
DB_NAME=databricks_postgres
CLIENT_ID=your-client-id
CLIENT_SECRET=your-client-secret
SCHEMA_NAME=

# Optional: SQLite Database (for migration)
# SQLITE_DB_PATH=chat_history.db

# Optional: Logging Configuration
# LOG_LEVEL=INFO

# Optional: Database Configuration
# CHAT_DB_PATH=chat_history.db

MLFLOW_TRACKING_URI=databricks
MLFLOW_REGISTRY_URI=databricks-uc
MLFLOW_EXPERIMENT_ID=....

LAKEHOUSE_APP_NAME=supply-chain-stress-testing
APP_FOLDER_IN_WORKSPACE=/Workspace/Users/.../supply-chain-stress-testing

# Optional: Server Configuration
# HOST=0.0.0.0
# PORT=8000 